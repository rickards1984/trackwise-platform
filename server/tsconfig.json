{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*.ts", "../shared/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src",
    "../client/**",
    "../vite.config.ts",
    "**/*vite*.ts",
    "**/*storage*.ts",
    "**/*database-storage*.ts",
    "**/*standalone*.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
