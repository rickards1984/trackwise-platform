{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "./server",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["server/*"]
    }
  },
  "include": ["server"],
  "exclude": ["node_modules", "client", "dist"]
}
